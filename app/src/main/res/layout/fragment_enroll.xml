<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    tools:context=".Fragments.EnrollFragment"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/imagebg"

        android:orientation="horizontal">



            <ImageView
                android:id="@+id/etProfilePic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_photo_24" />




    </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"

                android:layout_weight="1"
                android:text="Select Profile Photo"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/et_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_txt_bg"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_secondname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_txt_bg"
                android:ems="10"
                android:hint="Second Name"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_txt_bg"
                android:ems="10"
                android:hint="Date Of Birth(dd/mm/yyyy)"
                android:inputType="date"
                android:maxLength="10"
                android:padding="12dp"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_txt_bg"
                android:ems="10"
                android:hint="Gender"
                android:inputType="textPersonName"
                android:maxLength="6"
                android:padding="12dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_txt_bg"
                android:ems="10"
                android:hint="Country"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_txt_bg"
                android:ems="10"
                android:hint="State"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_hometown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_txt_bg"
                android:ems="10"
                android:hint="Home Town"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/et_phn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_txt_bg"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="12dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_telphn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/edit_txt_bg"
                android:ems="10"

                android:hint="Telephone Number"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="12dp"
                android:textSize="14sp" />


        </LinearLayout>

    </ScrollView>



    <Button
        android:id="@+id/adduser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:padding="12dp"
        android:text="add user"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>